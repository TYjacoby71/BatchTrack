
# BatchTrack Environment Configuration

# Flask / Database Configuration
BATCHTRACK_ENV=development  # Optional override for staging/production selection
FLASK_ENV=development
SECRET_KEY=your-secret-key-here
EXTERNAL_BASE_URL=https://batchtrack.onrender.com
CANONICAL_HOST=batchtrack.onrender.com
DATABASE_URL=sqlite:///batchtrack.db
SQLALCHEMY_CREATE_ALL=0
SQLALCHEMY_POOL_SIZE=60
SQLALCHEMY_MAX_OVERFLOW=40
SQLALCHEMY_POOL_TIMEOUT=5

# Stripe Configuration (for billing)
STRIPE_PUBLISHABLE_KEY=pk_test_...
STRIPE_SECRET_KEY=sk_test_...
STRIPE_WEBHOOK_SECRET=whsec_...

# Google OAuth Configuration
GOOGLE_CLIENT_ID=your-google-client-id
GOOGLE_CLIENT_SECRET=your-google-client-secret

# Google AI / BatchBot
GOOGLE_AI_API_KEY=your-gemini-api-key
GOOGLE_AI_BATCHBOT_MODEL=gemini-1.5-pro
GOOGLE_AI_PUBLICBOT_MODEL=gemini-1.5-flash
GOOGLE_AI_ENABLE_SEARCH=true
BATCHBOT_DEFAULT_MAX_REQUESTS=25
BATCHBOT_REQUEST_WINDOW_DAYS=30
BATCHBOT_CHAT_MAX_MESSAGES=60
BATCHBOT_COST_PER_MILLION_INPUT=0.35
BATCHBOT_COST_PER_MILLION_OUTPUT=0.53
BATCHBOT_SIGNUP_BONUS_REQUESTS=20
BATCHBOT_REFILL_LOOKUP_KEY=batchbot_refill_100

# Whop Integration (optional)
WHOP_API_KEY=your-whop-api-key
WHOP_WEBHOOK_SECRET=your-whop-webhook-secret

# Email Configuration (optional)
MAIL_SERVER=smtp.gmail.com
MAIL_PORT=587
MAIL_USE_TLS=True
MAIL_USERNAME=your-email@gmail.com
MAIL_PASSWORD=your-app-password

# Logging Configuration
LOG_LEVEL=WARNING  # Use DEBUG for active debugging, INFO for verbose logging, WARNING for clean console
LOG_FILE=logs/batchtrack.log

# Frontend Debug Mode (set to false in production)
FRONTEND_DEBUG=false

# Redis / Rate Limiting
REDIS_URL=redis://:password@your-redis-host:6379/0
SESSION_TYPE=redis
REDIS_POOL_MAX_CONNECTIONS=200
REDIS_POOL_TIMEOUT=5
REDIS_SOCKET_TIMEOUT=5
REDIS_CONNECT_TIMEOUT=5
RATELIMIT_STORAGE_URI=${REDIS_URL}

# Security
SESSION_COOKIE_SECURE=False  # Set to True in production with HTTPS
SESSION_COOKIE_HTTPONLY=True
SESSION_COOKIE_SAMESITE=Lax

# Development
DEBUG=True
TESTING=False

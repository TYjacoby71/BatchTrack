# BatchTrack Environment Configuration

## Core Runtime
FLASK_ENV=development
APP_BASE_URL=http://localhost:5000
APP_HOST=localhost
FLASK_SECRET_KEY=your-secret-key-here
LOADTEST_LOG_LOGIN_FAILURE_CONTEXT=0

## Database
DATABASE_URL=sqlite:///batchtrack.db
# DATABASE_INTERNAL_URL=postgresql://user:pass@internal-host:5432/app
SQLALCHEMY_POOL_SIZE=60
SQLALCHEMY_MAX_OVERFLOW=40
SQLALCHEMY_POOL_TIMEOUT=5

## Redis / Rate Limiting
REDIS_URL=redis://:password@your-redis-host:6379/0
SESSION_TYPE=redis
RATELIMIT_STORAGE_URI=${REDIS_URL}
CACHE_TYPE=RedisCache
CACHE_REDIS_URL=${REDIS_URL}
REDIS_POOL_MAX_CONNECTIONS=10
REDIS_POOL_TIMEOUT=5
REDIS_SOCKET_TIMEOUT=5
REDIS_CONNECT_TIMEOUT=5
# REDIS_MAX_CONNECTIONS=250

## Email Providers
EMAIL_PROVIDER=smtp
MAIL_SERVER=smtp.gmail.com
MAIL_PORT=587
MAIL_USE_TLS=true
MAIL_USERNAME=your-email@gmail.com
MAIL_PASSWORD=your-app-password
MAIL_DEFAULT_SENDER=noreply@batchtrack.app

## Stripe Billing
STRIPE_PUBLISHABLE_KEY=pk_test_...
STRIPE_SECRET_KEY=sk_test_...
STRIPE_WEBHOOK_SECRET=whsec_...

## Google OAuth
GOOGLE_OAUTH_CLIENT_ID=your-google-client-id
GOOGLE_OAUTH_CLIENT_SECRET=your-google-client-secret

## Google AI / BatchBot
GOOGLE_AI_API_KEY=your-gemini-api-key
GOOGLE_AI_DEFAULT_MODEL=gemini-1.5-flash
GOOGLE_AI_BATCHBOT_MODEL=gemini-1.5-pro
GOOGLE_AI_PUBLICBOT_MODEL=gemini-1.5-flash
GOOGLE_AI_ENABLE_SEARCH=true
BATCHBOT_DEFAULT_MAX_REQUESTS=25
BATCHBOT_REQUEST_WINDOW_DAYS=30
BATCHBOT_CHAT_MAX_MESSAGES=60
BATCHBOT_COST_PER_MILLION_INPUT=0.35
BATCHBOT_COST_PER_MILLION_OUTPUT=0.53
BATCHBOT_SIGNUP_BONUS_REQUESTS=20
BATCHBOT_REFILL_LOOKUP_KEY=batchbot_refill_100

## Optional Integrations
WHOP_API_KEY=your-whop-api-key
WHOP_APP_ID=your-whop-app-id
SENDGRID_API_KEY=your-sendgrid-api-key
POSTMARK_SERVER_TOKEN=your-postmark-token
MAILGUN_API_KEY=your-mailgun-api-key
MAILGUN_DOMAIN=mg.your-domain.com

## Load Testing (Locust)
LOCUST_USER_BASE=loadtest_user
LOCUST_USER_PASSWORD=loadtest123
LOCUST_USER_COUNT=100
LOCUST_CACHE_TTL=120
LOCUST_REQUIRE_HTTPS=1
LOCUST_LOG_LOGIN_FAILURE_CONTEXT=1
# LOCUST_USER_CREDENTIALS=[{"username":"loadtest_user1","password":"loadtest123"}]

# Core Flask configuration
FLASK_ENV=production
FLASK_APP=wsgi:app
LOG_LEVEL=INFO

# Database
DATABASE_URL=postgresql+psycopg2://batchtrack:change-me@db-host:5432/batchtrack
SQLALCHEMY_POOL_SIZE=80
SQLALCHEMY_MAX_OVERFLOW=80
SQLALCHEMY_POOL_TIMEOUT=30
SQLALCHEMY_POOL_RECYCLE=900

# Redis (shared cache + rate limiting)
REDIS_URL=redis://redis-host:6379/0
RATELIMIT_STORAGE_URI=${REDIS_URL}

# Billing cache tuning (seconds)
BILLING_GATE_CACHE_TTL_SECONDS=60
BILLING_GATE_CACHE_ENABLED=1

# Gunicorn
GUNICORN_BIND=0.0.0.0:5000
GUNICORN_WORKERS=12
GUNICORN_WORKER_CLASS=gevent
GUNICORN_WORKER_CONNECTIONS=1000
GUNICORN_TIMEOUT=60
GUNICORN_KEEPALIVE=5

# Security
ENABLE_PROXY_FIX=1
FORCE_SECURITY_HEADERS=1

# Feature toggles / secrets (populate securely)
FLASK_SECRET_KEY=change-me
STRIPE_SECRET_KEY=change-me
WHOP_API_KEY=


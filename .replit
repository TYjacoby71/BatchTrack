# BatchTrack Flask Application
entrypoint = "main.py"
modules = ["python-3.11", "postgresql-16"]

[agent]
expertMode = true

[nix]
channel = "stable-24_05"
packages = ["cargo", "freetype", "glibcLocales", "libev", "libiconv", "nano", "run", "rustc", "sqlite-interactive"]

[unitTest]
language = "python3"

[gitHubImport]
requiredFiles = [".replit", "replit.nix"]

[deployment]
run = ["sh", "-c", "FLASK_ENV=production FLASK_DEBUG=false python wsgi.py"]
deploymentTarget = "cloudrun"
build = ["sh", "-c", "pip install -r requirements.txt"]

[workflows]
runButton = "Project"

[[workflows.workflow]]
name = "Run Flask"
author = 39427985
mode = "sequential"

[[workflows.workflow.tasks]]
task = "shell.exec"
args = "PYTHONPATH=. flask run --host=0.0.0.0 --port=5000"

[[workflows.workflow]]
name = "Run Flask Debug"
author = 39427985
mode = "sequential"

[[workflows.workflow.tasks]]
task = "shell.exec"
args = "python run.py"

[[workflows.workflow]]
name = "Project"
mode = "parallel"
author = "agent"

[[workflows.workflow.tasks]]
task = "workflow.run"
args = "DB Portal"

[[workflows.workflow]]
name = "DB Portal"
author = "agent"

[workflows.workflow.metadata]
outputType = "webview"

[[workflows.workflow.tasks]]
task = "shell.exec"
args = "cd data_builder/ingredients && python db_portal.py"
waitForPort = 5000

[[ports]]
localPort = 5000
externalPort = 8000





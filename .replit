# BatchTrack Flask Application
entrypoint = "main.py"
run = "python3 main.py"
modules = ["python-3.11"]

[agent]
expertMode = true

[nix]
channel = "stable-24_05"
packages = ["cargo", "freetype", "glibcLocales", "libev", "libiconv", "nano", "run", "rustc"]

[unitTest]
language = "python3"

[gitHubImport]
requiredFiles = [".replit", "replit.nix"]

[deployment]
run = ["sh", "-c", "FLASK_ENV=production FLASK_DEBUG=false python wsgi.py"]
deploymentTarget = "cloudrun"
build = ["sh", "-c", "pip install -r requirements.txt"]

[[ports]]
localPort = 5000
externalPort = 80

[[ports]]
localPort = 8089
externalPort = 5000

[workflows]
runButton = "Run Flask Debug"

[[workflows.workflow]]
name = "Run Flask"
author = 39427985
mode = "sequential"

[[workflows.workflow.tasks]]
task = "shell.exec"
args = "PYTHONPATH=. flask run --host=0.0.0.0 --port=5000"

[[workflows.workflow]]
name = "Run Flask Debug"
author = 39427985
mode = "sequential"

[[workflows.workflow.tasks]]
task = "shell.exec"
args = "python run.py"





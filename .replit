entrypoint = "main.py"
modules = ["python-3.11"]

[nix]
channel = "stable-24_05"

[unitTest]
language = "python3"

[gitHubImport]
requiredFiles = [".replit", "replit.nix"]

[deployment]
run = ["sh", "-c", "python app.py"]
deploymentTarget = "cloudrun"

[[ports]]
localPort = 5000
externalPort = 80

[workflows]
runButton = "Run Tests"

[[workflows.workflow]]
name = "Run Flask"
author = 39427985
mode = "sequential"

[[workflows.workflow.tasks]]
task = "shell.exec"
args = "flask run --host=0.0.0.0 --port=5000"

[[workflows.workflow]]
name = "Run Flask App"
author = 39427985
mode = "sequential"

[[workflows.workflow.tasks]]
task = "shell.exec"
args = "FLASK_APP=app.py FLASK_ENV=development PYTHONPATH=. flask run --host=0.0.0.0 --port=5000"

[[workflows.workflow]]
name = "Run Tests"
author = 39427985
mode = "sequential"

[[workflows.workflow.tasks]]
task = "shell.exec"
args = "python run_tests.py"

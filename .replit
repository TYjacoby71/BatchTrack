# BatchTrack Flask Application
entrypoint = "main.py"
modules = ["python-3.11"]

[agent]
expertMode = true

[nix]
channel = "stable-24_05"
packages = ["cargo", "libiconv", "nano", "rustc", "run"]

[unitTest]
language = "python3"

[gitHubImport]
requiredFiles = [".replit", "replit.nix"]

[deployment]
run = ["sh", "-c", "python wsgi.py"]
deploymentTarget = "cloudrun"
build = ["sh", "-c", "pip install -r requirements.txt"]

[[ports]]
localPort = 5000
externalPort = 80

[workflows]
runButton = "Run Flask Debug"

[[workflows.workflow]]
name = "Run Flask"
author = 39427985
mode = "sequential"

[[workflows.workflow.tasks]]
task = "shell.exec"
args = "PYTHONPATH=. flask run --host=0.0.0.0 --port=5000"

[[workflows.workflow]]
name = "Run Flask Debug"
author = 39427985
mode = "sequential"

[[workflows.workflow.tasks]]
task = "shell.exec"
args = "python run.py"




